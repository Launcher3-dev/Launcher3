        <service
            android:name="com.codemx.launcher3.MemoryTracker"
            android:enabled="@bool/debug_memory_enabled" >
        </service>

        <receiver android:name="com.codemx.launcher3.WallpaperChangedReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.WALLPAPER_CHANGED" />
            </intent-filter>
        </receiver>

        <!-- Intent received used to install shortcuts from other applications -->
        <receiver
            android:name="com.codemx.launcher3.InstallShortcutReceiver"
            android:permission="com.android.launcher.permission.INSTALL_SHORTCUT" >
            <intent-filter>
                <action android:name="com.android.launcher.action.INSTALL_SHORTCUT" />
            </intent-filter>
        </receiver>

        <!-- Intent received used to initialize a restored widget -->
        <receiver android:name="com.codemx.launcher3.AppWidgetsRestoredReceiver" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_HOST_RESTORED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.codemx.launcher3.StartupReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- The settings provider contains Home's data, like the workspace favorites -->
        <provider
            android:name="com.codemx.launcher3.LauncherProvider"
            android:authorities="com.codemx.launcher3.settings"
            android:exported="true"
            android:readPermission="com.codemx.launcher3.permission.READ_SETTINGS"
            android:writePermission="com.codemx.launcher3.permission.WRITE_SETTINGS" />

        <meta-data
            android:name="android.nfc.disable_beam_default"
            android:value="true" />
    </application>

</manifest>